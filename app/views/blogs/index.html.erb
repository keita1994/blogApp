
 <% @blogs.each do |blog| %>
  <div class="article">
    <div class="article__top">
      <img src="https://imgsv.imaging.nikon.com/lineup/dslr/d600/img/sample01/img_01_l.jpg" width="600px" height="312px">
    </div>
    <div class="article__bottom">
      <div class="index-title">
        <h5><a href="/blogs/<%= blog.id %>"><%= blog.title %></a></h5>
        <p>
          <a href="/users/<%= blog.user.id %>">Written by : <%= blog.user.nickname %></a>
        </p>
      </div>
    </div>
  </div>
<% end %>

