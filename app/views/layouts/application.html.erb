<!DOCTYPE html>
<html>
<head>
  <title>BlogApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

<!-- Materialize -->
  <style type="text/css" href="./style.css"></style>

  <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">

  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>

  <script
  src="https://code.jquery.com/jquery-3.3.1.js"
  integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
  crossorigin="anonymous"></script>
</head>

<% if user_signed_in? && current_user.sort == "gryffindor" %>
<body class="gryffindor">
  <header>
    <nav class="red darken-4">
<% elsif user_signed_in? && current_user.sort == "slytherin" %>
<body class="slytherin">
  <header>
    <nav class="teal darken-4">
<% elsif user_signed_in? && current_user.sort == "hufflepuff" %>
<body class="hufflepuff">
  <header>
    <nav class="yellow darken-2">
<% elsif user_signed_in? && current_user.sort == "ravenclaw" %>
<body class="ravenclaw">
  <header>
    <nav class="light-blue darken-4">
<% elsif %>
<body class="muggle">
  <header>
    <nav class="grey darken-4">
<% end %>

      <div class="nav-wrapper">
        <a href="/" class="brand-logo">BLOG</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
        <% if user_signed_in? %>
          <li><%= link_to 'サインアウト', "/users/sign_out", method: :delete%></li>
          <li><a href="/users/<%= current_user.id %>">マイページ</a></li>
          <li><a href="/blogs/new">投稿</a></li>
        <% else %>
          <li><%= link_to 'ログイン', new_user_session_path, class: 'post' %></li>
          <li><%= link_to '新規登録', new_user_registration_path, class: 'post' %></li>
        <% end %>
        </ul>
      </div>
   </nav>
  </header>

<%= yield %>

</body>
</html>
